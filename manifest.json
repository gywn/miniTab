{
    "background": {
        "scripts": ["jquery-2.0.3.min.js", "background.js"]
    },
    "browser_action": {
        "default_icon": {
            "16": "images/logo-16.png",
            "32": "images/logo-32.png"
        }
    },
    "commands": {
        "analyze-active-tab": {
            "description": "Make the current tab markable",
            "suggested_key": {
                "default": "Alt+Shift+1"
            }
        },
        "insert-active-tab": {
            "description": "Record & close the current tab",
            "suggested_key": {
                "default": "Alt+Shift+2"
            }
        }
    },
    "content_scripts": [{
        "css": ["content.css"],
        "matches": ["http://*/*", "https://*/*"]
    }],
    "description": "A lightweight tabs keeper",
    "icons": {
        "128": "images/logo-128.png",
        "64": "images/logo-64.png",
        "32": "images/logo-32.png",
        "16": "images/logo-16.png"
    },
    "manifest_version": 2,
    "name": "miniTab",
    "permissions": ["tabs", "<all_urls>", "storage"],
    "version": "1.10"
}
